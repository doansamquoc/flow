<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_post_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/padding_md"
    app:layout_constraintTop_toBottomOf="@id/materialCardView"
    tools:showIn="@layout/item_post">

    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/avatar_image_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:src="@drawable/two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialCardView"
        app:shapeAppearance="@style/CircleImage" />

    <TextView
        android:id="@+id/display_name_text_view"
        style="?attr/textAppearanceTitleLargeEmphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_md"
        android:text="@string/john_doe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatar_image_view"
        app:layout_constraintTop_toBottomOf="@id/materialCardView" />

    <TextView
        android:id="@+id/timestamp_text_view"
        style="?attr/textAppearanceTitleLargeEmphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_md"
        android:alpha=".5"
        android:text="@string/_2_hours_ago"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/display_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/materialCardView" />
</LinearLayout>