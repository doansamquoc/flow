<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_post_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:showIn="@layout/item_post">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:scaleType="centerCrop"
        android:src="@drawable/one"
        app:shapeAppearanceOverlay="@style/CircleImage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_md"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/display_name_text_view"
            style="?attr/textAppearanceTitleMediumEmphasized"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/john_doe" />

        <TextView
            android:id="@+id/timestamp_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_2_hours_ago" />
    </LinearLayout>
</LinearLayout>